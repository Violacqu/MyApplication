<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/view12"
        android:text="ViVi"
        android:gravity="center"
        android:textSize="90px"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@color/colorbackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="@color/colorbackground">

        <TextView
            android:id="@+id/editText4"
            android:layout_width="82dp"
            android:layout_height="44dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2019"
            android:textSize="50px" />

        <TextView
            android:id="@+id/textView78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Expense"
            android:textSize="50px"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="98dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           Income         "
            android:textSize="50px"
            app:layout_constraintBottom_toBottomOf="@+id/textViewtotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toEndOf="@+id/textViewtotal"
            app:layout_constraintTop_toTopOf="@+id/textViewtotal"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="@color/colorbackground">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:spinnerMode="dialog"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewtotal"
            android:layout_width="63dp"
            android:layout_height="38dp"
            android:background="@null"
            android:ems="10"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:layout_marginRight="43dp"/>

        <TextView
            android:id="@+id/textViewexpensetotal"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="  0.00"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="420dp"

 />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/img_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="showaccount"
            android:src="@drawable/front2"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>
        <ImageView
            android:id="@+id/img_chart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="showchart"
            android:src="@drawable/chart1"
            />



        <ImageView
            android:id="@+id/img_add"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="showaddpage1"
            android:src="@drawable/add" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="showuser"
            android:src="@drawable/user1" />


    </LinearLayout>






</LinearLayout>